@model DataAccess.Models.UserModel
@{
    Layout = null;
    ViewBag.Title = "Login";
    var newdt = System.DateTime.Now.ToString("MMddyyyyhhmmss");
}
<!doctype html>
<html class="fixed">
<head>
    <meta charset="UTF-8">
    <link rel="icon" href="~/Content/images/favicon.ico" type="image/gif" sizes="16x16">
    <title>@ViewBag.Title | EagleEye</title>
    <meta name="keywords" content="CRM" />
    <meta name="description" content="Easy to use CRM" />

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- Web Fonts  -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css" />

    <!-- Vendor CSS -->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <!-- start: page -->
    <section class="body-sign" id="alamDiv">
        <div class="center-sign">
            <a href="/" class="logo pull-left">
                <img src="~/Content/images/eagleeye_logo.png" height="50" alt="CRM" />
            </a>

            <div class="panel panel-sign">
                <div class="panel-title-sign mt-xl text-right">
                    <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i> Sign In</h2>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Authenticate", "Users", FormMethod.Post, new { id = "loginForm" }))
                    {
                        <div class="form-group mb-lg">
                            <label>EmailId</label>
                            <div class="input-group input-group-icon">
                                @Html.TextBoxFor(t => t.Email, new { @class = "form-control input-lg", @placeholder = "EmailId",@autocomplete="off" })
                                <span class="input-group-addon">
                                    <span class="icon icon-lg">
                                        <i class="fa fa-user"></i>
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="form-group mb-lg">
                            <div class="clearfix">
                                <label class="pull-left">Password</label>
                                <a href="~/Users/ForgotPassword" class="pull-right">Lost Password?</a>
                            </div>
                            <div class="input-group input-group-icon">
                                @Html.TextBoxFor(t => t.Password, new { @class = "form-control input-lg", @placeholder = "Password", @type = "password", @autocomplete = "off" })
                                <span class="input-group-addon">
                                    <span class="icon icon-lg">
                                        <i class="fa fa-lock"></i>
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-8">
                                @*<p class="texta-centera">Don't have an account yet? <a href="~/Users/Signup">Sign Up!</a></p>*@
                            </div>
                            <div class="col-sm-4 text-right">
                                <button type="submit" class="btn btn-success hidden-xs">Sign In</button>
                                <button type="submit" class="btn btn-success btn-block btn-lg visible-xs mt-lg">Sign In</button>
                            </div>
                        </div>                      

                    }
                </div>
            </div>

            @Html.Partial("_copyRightFooter")

        </div>
    </section>
    <!-- end: page -->

    @Scripts.Render("~/bundles/VendorJs")
    @Scripts.Render("~/bundles/SpecificPageJS")

    <script src="~/Content/page-scripts/Users/Authentication.js?@newdt"></script>
    <script type="text/javascript">
        var auth = new authenticationUser();
        auth.authUserUrl = "@Url.Action("Authenticate", "Users")";
        auth.init();
    </script>

</body>
</html>
