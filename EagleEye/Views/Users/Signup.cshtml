@{
    Layout = null;
    ViewBag.Title = "Lost Password";
}
<!doctype html>
<html class="fixed">
<head>
    <meta charset="UTF-8">
    <link rel="icon" href="~/Content/images/favicon.ico" type="image/gif" sizes="16x16">
    <title>@ViewBag.Title | CRM</title>
    <meta name="keywords" content="CRM" />
    <meta name="description" content="Easy to use CRM">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- Web Fonts  -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css">

    <!-- Vendor CSS -->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <!-- start: page -->
    <section class="body-sign">
        <div class="center-sign">
            <a href="/" class="logo pull-left">
                <img src="~/Content/images/logo.png" height="50" alt="CRM" />
            </a>

            <div class="panel panel-sign">
                <div class="panel-title-sign mt-xl text-right">
                    <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i> Sign Up</h2>
                </div>
                <div class="panel-body">
                    <form>
                        <div class="form-group mb-lg">
                            <label>Name</label>
                            <input name="name" type="text" class="form-control input-lg" />
                        </div>

                        <div class="form-group mb-lg">
                            <label>E-mail Address</label>
                            <input name="email" type="email" class="form-control input-lg" />
                        </div>

                        <div class="form-group mb-none">
                            <div class="row">
                                <div class="col-sm-6 mb-lg">
                                    <label>Password</label>
                                    <input name="pwd" type="password" class="form-control input-lg" />
                                </div>
                                <div class="col-sm-6 mb-lg">
                                    <label>Password Confirmation</label>
                                    <input name="pwd_confirm" type="password" class="form-control input-lg" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-8">
                                <p class="texts-centear">Already have an account? <a href="~/Users/Login">Sign In!</a>
                            </div>
                            <div class="col-sm-4 text-right">
                                <button type="submit" class="btn btn-primary hidden-xs">Sign Up</button>
                                <button type="submit" class="btn btn-primary btn-block btn-lg visible-xs mt-lg">Sign Up</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>

            @Html.Partial("_copyRightFooter")
        </div>
    </section>
    <!-- end: page -->

    @Scripts.Render("~/bundles/SpecificPageJS")

</body>
</html>
